<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="consoleEventLogger" class="org.epam.university.logger.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="org.epam.university.logger.FileEventLogger">
        <constructor-arg value="d:/log.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="org.epam.university.logger.CacheFileEventLogger" parent="fileEventLogger">
        <constructor-arg value="3"/>
    </bean>

    <bean id="combinedEventLogger" class="org.epam.university.logger.CombineEventLogger">
        <constructor-arg>
            <list>
                <ref bean="consoleEventLogger"/>
                <ref bean="fileEventLogger"/>
            </list>
        </constructor-arg>
    </bean>


</beans>