<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="app" class="org.epam.university.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="consoleEventLogger"/>
    </bean>

    <bean id="client" class="org.epam.university.domain.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="consoleEventLogger" class="org.epam.university.logger.ConsoleEventLogger"/>

</beans>