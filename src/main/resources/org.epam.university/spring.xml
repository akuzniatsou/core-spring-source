<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="
        http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.2.xsd">

    <bean id="app" class="org.epam.university.App">
        <constructor-arg ref="client"/>
        <constructor-arg ref="cacheFileEventLogger"/>
    </bean>

    <bean id="event" class="org.epam.university.domain.Event" scope="prototype">
        <constructor-arg>
            <bean class="java.util.Date"/>
        </constructor-arg>
        <constructor-arg ref="dataFormat"/>
        <property name="msg" value="Some event for user 1"/>
    </bean>

    <bean id="client" class="org.epam.university.domain.Client">
        <constructor-arg value="1"/>
        <constructor-arg value="John Smith"/>
    </bean>

    <bean id="dataFormat" class="java.text.DateFormat" factory-method="getDateTimeInstance"/>

    <bean id="consoleEventLogger" class="org.epam.university.logger.ConsoleEventLogger"/>

    <bean id="fileEventLogger" class="org.epam.university.logger.FileEventLogger" init-method="init">
        <constructor-arg value="d:/log.txt"/>
    </bean>

    <bean id="cacheFileEventLogger" class="org.epam.university.logger.CacheFileEventLogger" init-method="init" destroy-method="destroy" parent="fileEventLogger">
        <constructor-arg value="3"/>
    </bean>


</beans>